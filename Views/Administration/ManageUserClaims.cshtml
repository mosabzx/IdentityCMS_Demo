@model UserClaimsViewModel
@{
    ViewData["Title"] = "Manage User Claims";
    var userName = ViewBag.UserName;
}

<div>
    
</div>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2><span class="text-primary">Manage @userName</span>Claims</h2>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-group m-1">
                    <input type="hidden" class="form-check-input" asp-for="@Model.Claims[i].ClaimType" />
                    <input class="form-check-input" asp-for="@Model.Claims[i].IsSelected" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">@Model.Claims[i].ClaimType</label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        


        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="EditUser" asp-route-Id="@Model.userId" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>

