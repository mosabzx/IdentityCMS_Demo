@model IEnumerable<ApplicationUser>
@{  
    ViewData["Title"] = "Users List";
}

<h1>Users List</h1>
<hr />

<div>
    @if (Model.Any())
    {
        <a class="btn btn-success mb-3" asp-controller="Account" asp-action="Register">Add new User</a>

        foreach (var user in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    User Id: @user.Id
                </div>

                <div class="card-body">
                    <h4 class="card-title">@user.UserName</h4>
                </div>
                @*<p class="card-text">Some example text</p>*@
                <div class="card-footer">
                    <a class="card-link btn btn-primary" asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                    <a class="card-link btn btn-danger" asp-controller="Administration" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No Users cerated yet!
            </div>

            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a User
                </h5>
                <a class="btn btn-primary" asp-controller="Account" asp-action="Register">
                    Create User
                </a>
            </div>

            @*<div class="card-footer">Footer</div>*@
        </div>
    }
</div>