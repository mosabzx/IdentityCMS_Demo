@model List<UserRoleViewModel>
@inject RoleManager<IdentityRole> roleManager
@{
    ViewBag.Title = "Edit Users in role";
    var roleId = ViewBag.roleId;
   
}



<h1>Edit users in this role</h1>
<hr />
<form method="post">

    <div class="card">
        <div class="card-header">
            <h3>Add or Remove users from <span class="mediumSeaGreen">@ViewBag.roleName</span> role</h3>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input hidden asp-for="@Model[i].UserId" />
                <input hidden asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>

            </div>
            }
        </div>

        <div class="card-footer">
            @*<button type="submit" class="btn btn-primary">Update</button>*@
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-danger">Cancel</a>
        </div>
    </div>

</form>
