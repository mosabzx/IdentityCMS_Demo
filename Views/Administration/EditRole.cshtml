@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit <span class="text-primary">@Model.RoleName</span> Role</h1>

<form class="form-group mt-3" method="post">

    <div class="form-group row">
        <label class="col-form-label col-sm-2" asp-for="Id"></label>
        <div class="col-sm-10">
            <input disabled asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="RoleName"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="col-sm-10">

        <div class="mt-2">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="RolesList" class="btn btn-danger">Cancel</a>
        </div>

    </div>
</form>
<div class="card">
    <div class="card-header">
        <h2>Users in <span class="text-primary">@Model.RoleName</span> role</h2>
    </div>

    <div class="card-body">
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <h5 class="card-title">@user</h5>
            }
        }
        else
        {
            <h5 class="card-title">No users in <span class="text-danger">@Model.RoleName</span> role yet!! </h5>
        }

        @*<p class="card-text">Some example text. Some example text.</p>*@
        @*<a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>*@
    </div>
    <div class="card-footer">
        <a asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Add or Remove User</a>
    </div>
</div>

