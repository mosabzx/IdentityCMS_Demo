@inject SignInManager<ApplicationUser> signInManager
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center jumbotron">
    <h1 class="display-3">Welcome</h1>
    <p><h2 class="display-4">"CMS" (Content Managment System)</h2> </p>
    <p>This Web app build on ASP.NET Core 3.1 Identity Service</p>
</div>
<hr />
<div class="row">
    <div class="col-3">
        <a class="btn btn-primary m-1" asp-action="Assignment">Assignment</a>
        <a class="btn btn-primary ml-1 " asp-action="TestPage">Test Page</a>
    </div>

    @if (signInManager.IsSignedIn(User) @*&& User.IsInRole("Admin") || User.IsInRole("Manager")*@)
    {
        <div class="col-8">

            <a class="btn btn-warning m-1 font-weight-bold" asp-controller="Administration" asp-action="RolesList">Roles List</a>

            <a class="btn btn-warning ml-1 font-weight-bold" asp-controller="Administration" asp-action="UsersList">User List</a>

        </div>
    }

</div>
